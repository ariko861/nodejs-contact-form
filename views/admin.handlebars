<!DOCTYPE html>
<html>
    <head>

        <!-- Meta Tag -->
        <meta charset="utf-8">
        <meta name="description" content="Contact Form">
        <meta name="keywords" content="Nodejs,UIkit,Nodemailer,Expressjs">
        <meta name="author" content="Author">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Title -->
        <title>Contact Us</title>

        <!-- Font -->
        <link href="https://fonts.googleapis.com/css?family=Raleway:400,500" rel="stylesheet">

        <!-- CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="/public/css/darkSky.css">
        <link rel="stylesheet" href="/public/css/fontawesome.min.css">
         
    </head>
    <body>

        <!-- Container -->
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 left-column">

                
                    <div class="title-container">
                        <h1 class="title">{{{__ 'Administration'}}}</h1>
                        </br>
                        <h5 class="title">Obtenir les réservations enregistrées sur la période donnée :</h5>
                        </br>
                    </div>

                    <!-- Form -->
                    <form class="contact-form" method="POST" action="admin">
                        <div class="form-group row">
                            <label for="method" class="col-lg-4 col-form-label">Méthode de sélection</label>
                            <div class="col-lg-8">
                                <select class="form-control form-control-sm" id="method" name="method" required>
                                    <option value="contactdate">Date de réservation</option>
                                    {{# each methods }}
                                        <option value="{{this.name}}">{{this.label}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label">Date de début de sélection</label>
                            <div class="col-lg-8">
                                <input class="form-control form-control-sm" type="date" name="beginDate">
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label">Date de fin de sélection</label>
                            <div class="col-lg-8">
                                <input class="form-control form-control-sm" type="date" name="endDate">
                            </div>
                        </div>
                        
                        
                        <div class="text-right">
                            <input class="btn btn-submit" type="submit" value={{{__ "Submit"}}}>
                        </div>
                    </form>
                    </br>

                </div>
                
                <div class="col-lg-6 left-column">
                    <div class="title-container">
                        <h4 class="title">Créer un lien pour nouveau formulaire de contact</h4>
                        
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label">Créer un lien de contact</label>
                        <div class="col-lg-8">
                            <input class="btn btn-submit" id="linkCreation" value="Créer un lien">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <a id="ajax-result" href></a>
                        </div>
                    </div>
                    <div id="copied" class="alert alert-success alert-dismissible fade show" role="alert">
                        Le lien a été copié !
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
               

                
            </div>
        </div>
        
        <script
			  src="https://code.jquery.com/jquery-3.6.0.min.js"
			  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
			  crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        
        <script>
            var linkButton = $("#linkCreation");
            var result = $("#ajax-result");
            
            linkButton.click(() => {
                $.ajax({ url: '/admin/newlink', method: "GET", dataType: "json"})
                    .done((res) => {
                        let data = res.link;
                        //result.append("<a href='"+ data +"'id='newlink'>" + data + "</a>");
                        result.attr("href", data);
                        result.html(data);
                    
                    })
                    .fail((error) => {
                        result.append("La requête a échoué.")
                    })
                    .always(()=> {
                        linkButton.fadeOut();
                    });
            });
            
            //var newlink = $("#newlink");
            result.click((event) => {
                event.preventDefault();
                var temp = $("<input>");
                var url = result.attr('href');
                console.log(url);
                $("body").append(temp);
                temp.val(url).select();
                document.execCommand("copy");
                temp.remove();
                $("#copied").fadeIn();                
            });
        
        </script>

    </body>
</html>
